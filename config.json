  "fallback": {
    "enabled": true,
    "clubLogoPath": "/assets/logo.png",
    "genericImages": [
      "/assets/fallback/rowing1.jpg",
      "/assets/fallback/rowing2.jpg",
      "/assets/fallback/rowing3.jpg"
