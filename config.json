  "branding": {
    "clubName": "Lake Macquarie Rowing Club",
    "clubLogoPath": "https://cdn.revolutionise.com.au/logos/hpg7hjrir3jsrjwa.png",
    "clubColors": {
      "primary": "#2778bf",
      "secondary": "#1a5a8f",
      "accent": "#FFD700",
      "background": "#F5F5F5",
      "text": "#333333",
      "white": "#FFFFFF"
    },
    "tagline": ""
  },
  
  "socialMedia": {
    "facebook": {
      "enabled": true,
      "handle": "Lake Macquarie Rowing Club",
      "url": "https://www.facebook.com/pages/Lake-Macquarie-Rowing-Club/276854532351490"
    },
    "instagram": {
      "enabled": true,
      "handle": "@lakemacquarierowingclub",
      "url": "https://www.instagram.com/lakemacquarierowingclub"
    }
  },
  
  "gallery": {
    "maxAlbumsToDisplay": 10,
    "publicOnly": true,
    "maxPhotosPerAlbum": 20,
    "prioritizeRecent": true
